{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "filesGlob": [
        "**/*.ts",
        "**/*.tsx",
        "!node_modules/**"
    ],
    "compileOnSave": true,
    "buildOnSave": false,
    "files": [
        "src/ciphers.ts",
        "src/common.ts",
        "src/index.ts",
        "src/keys.ts",
        "test/test.ts",
        "typings/lodash/lodash.d.ts",
        "typings/mocha/mocha.d.ts",
        "typings/node/node.d.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
